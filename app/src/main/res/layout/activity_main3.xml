<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        tools:context=".Main3Activity">


        <TextView
            android:id="@+id/reser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reserva"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/reser"
            android:background="#eee">
            <EditText
                android:id="@+id/username"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="@string/nombre"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reser"
            android:layout_marginTop="20dp"
            android:background="#eee"
            android:layout_toEndOf="@id/text1">
            <EditText
                android:id="@+id/userlastname"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="@string/apellido"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="14dp"
            android:background="#eEe"
            android:layout_below="@id/text1">
            <EditText
                android:id="@+id/useremail"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#eee"
            android:layout_toEndOf="@id/text3"
            android:layout_marginEnd="14dp"
            android:layout_below="@id/text2">
            <EditText
                android:id="@+id/userphone"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="@string/telefono"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textarrval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_llegada"
            android:textSize="18sp"
            android:layout_below="@id/text4"
            android:layout_marginTop="50dp"
            android:layout_marginStart="14dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_below="@id/textarrval">
            <EditText
                android:id="@+id/arrival"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/departureTect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechasalida"
            android:textSize="18sp"
            android:layout_below="@id/text4"
            android:layout_alignStart="@id/text4"
            android:layout_marginTop="50dp"

            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_below="@id/departureTect"
            android:layout_toEndOf="@id/text5">
            <EditText
                android:id="@+id/departure"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/titleRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text6"
            android:textSize="19sp"
            android:layout_marginTop="40dp"
            android:text="@string/standard"
            android:textColor="#212121"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_room"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="19sp"
            android:layout_below="@id/titleRoom"
            />

        <TextView
            android:id="@+id/detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_detalles"
            android:textSize="19sp"
            android:layout_alignTop="@id/price"
            android:layout_alignStart="@id/departureTect"
            android:textColor="@color/colorAmber"
            />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@id/detalle"/>

        <TextView
            android:id="@+id/textpagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:text="Total Pagar"
            android:textColor="#212121"
            />

        <TextView
            android:id="@+id/textnoches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textpagar"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:text="Standar Cama Doble "/>
        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_room"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@id/textnoches"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textnoches2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de noches"
            android:layout_below="@id/textnoches"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/numnoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@id/textnoches2"
            android:layout_below="@id/price2"
            android:textSize="18sp"/>
        <View
            android:id="@+id/divider"
            android:layout_alignStart="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:layout_below="@id/numnoche"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="#212121"
            android:layout_below="@id/divider"
            android:layout_alignStart="@id/divider"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/pricetotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="$ 8.00"
            android:layout_below="@id/divider"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorAmber"/>
        <Button
            android:id="@+id/pyament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botondesign"
            android:text="Pagar"
            android:textColor="@color/colorTextWhite"
            android:layout_below="@id/total"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
</ScrollView>